<div class="page-header">
  <h3>Message #<%= @message.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Sender</dt>
      <dd>
        <% if @message.sender.present? %>
          <a href="/msgsenders/<%= @message.sender_id %>">
            <%= @message.sender.host_id %>
          </a>
        <% end %>
      </dd>

      <dt>Reciever</dt>
      <dd>
        <% if @message.reciever.present? %>
          <a href="/msgrecievers/<%= @message.reciever_id %>">
            <%= @message.reciever.host_id %>
          </a>
        <% end %>
      </dd>

      <dt>Msg content</dt>
      <dd><%= @message.msg_content %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/messages" class="btn btn-primary">
        Back
      </a>
      <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
