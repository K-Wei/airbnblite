<div class="page-header">
  <h3>Msgreciever #<%= @msgreciever.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Host</dt>
      <dd><%= @msgreciever.host_id %></dd>

      <dt>Guest</dt>
      <dd><%= @msgreciever.guest_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/msgrecievers" class="btn btn-primary">
        Back
      </a>
      <a href="/msgrecievers/<%= @msgreciever.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_msgreciever/<%= @msgreciever.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Msgreciever has many messages -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Messages
      </li>

      <% @msgreciever.messages.each do |message| %>
        <li class="list-group-item">
          <a href="/messages/<%= message.id %>">
            <%= message.sender_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/messages/<%= message.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/messages/<%= message.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_message/<%= message.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
