<!-- Validation failure messages -->
<% if @msgreciever.errors.any? %>
  <% @msgreciever.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Msgreciever #<%= @msgreciever.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_msgreciever/<%= @msgreciever.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for host_id -->
      <div class="form-group">
        <label for="host_id" class="control-label">
          Host
        </label>

        <%= select_tag(:host_id, options_from_collection_for_select(Host.all, :id, :user_id, @msgreciever.host_id), :class => "form-control") %>
      </div>

      <!-- Label and input for guest_id -->
      <div class="form-group">
        <label for="guest_id" class="control-label">
          Guest
        </label>

        <input type="text" id="guest_id" name="guest_id" placeholder="Guest" class="form-control" value="<%= @msgreciever.guest_id %>">
      </div>

      <button class="btn btn-warning">
        Update Msgreciever
      </button>
      or
      <a href="/msgrecievers/<%= @msgreciever.id %>">Cancel</a>
    </form>
  </div>
</div>
