<!-- Validation failure messages -->
<% if @booking.errors.any? %>
  <% @booking.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Booking #<%= @booking.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_booking/<%= @booking.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <%= select_tag(:listing_id, options_from_collection_for_select(Listing.all, :id, :title, @booking.listing_id), :class => "form-control") %>
      </div>

      <!-- Label and input for guest_id -->
      <div class="form-group">
        <label for="guest_id" class="control-label">
          Guest
        </label>

        <input type="text" id="guest_id" name="guest_id" placeholder="Guest" class="form-control" value="<%= @booking.guest_id %>">
      </div>

      <!-- Label and input for optionalunique_price -->
      <div class="form-group">
        <label for="optionalunique_price" class="control-label">
          Optionalunique price
        </label>

        <input type="text" id="optionalunique_price" name="optionalunique_price" placeholder="Optionalunique price" class="form-control" value="<%= @booking.optionalunique_price %>">
      </div>

      <button class="btn btn-warning">
        Update Booking
      </button>
      or
      <a href="/bookings/<%= @booking.id %>">Cancel</a>
    </form>
  </div>
</div>
