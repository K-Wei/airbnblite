<!-- Validation failure messages -->
<% if @listingreview.errors.any? %>
  <% @listingreview.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Listingreview #<%= @listingreview.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_listingreview/<%= @listingreview.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for booking_id -->
      <div class="form-group">
        <label for="booking_id" class="control-label">
          Booking
        </label>

        <input type="text" id="booking_id" name="booking_id" placeholder="Booking" class="form-control" value="<%= @listingreview.booking_id %>">
      </div>

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <input type="text" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @listingreview.listing_id %>">
      </div>

      <!-- Label and input for review_title -->
      <div class="form-group">
        <label for="review_title" class="control-label">
          Review title
        </label>

        <input type="text" id="review_title" name="review_title" placeholder="Review title" class="form-control" value="<%= @listingreview.review_title %>">
      </div>

      <!-- Label and input for accuracy -->
      <div class="form-group">
        <label for="accuracy" class="control-label">
          Accuracy
        </label>

        <input type="text" id="accuracy" name="accuracy" placeholder="Accuracy" class="form-control" value="<%= @listingreview.accuracy %>">
      </div>

      <!-- Label and input for communication -->
      <div class="form-group">
        <label for="communication" class="control-label">
          Communication
        </label>

        <input type="text" id="communication" name="communication" placeholder="Communication" class="form-control" value="<%= @listingreview.communication %>">
      </div>

      <!-- Label and input for cleanliness -->
      <div class="form-group">
        <label for="cleanliness" class="control-label">
          Cleanliness
        </label>

        <input type="text" id="cleanliness" name="cleanliness" placeholder="Cleanliness" class="form-control" value="<%= @listingreview.cleanliness %>">
      </div>

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @listingreview.location %>">
      </div>

      <!-- Label and input for checkin -->
      <div class="form-group">
        <label for="checkin" class="control-label">
          Checkin
        </label>

        <input type="text" id="checkin" name="checkin" placeholder="Checkin" class="form-control" value="<%= @listingreview.checkin %>">
      </div>

      <!-- Label and input for value -->
      <div class="form-group">
        <label for="value" class="control-label">
          Value
        </label>

        <input type="text" id="value" name="value" placeholder="Value" class="form-control" value="<%= @listingreview.value %>">
      </div>

      <!-- Label and input for review_content -->
      <div class="form-group">
        <label for="review_content" class="control-label">
          Review content
        </label>

        <textarea id="review_content" name="review_content" placeholder="Review content" class="form-control" rows="3"><%= @listingreview.review_content %></textarea>
      </div>

      <!-- Label and input for photos -->
      <div class="form-group">
        <label for="photos" class="control-label">
          Photos
        </label>

        <input type="text" id="photos" name="photos" placeholder="Photos" class="form-control" value="<%= @listingreview.photos %>">
      </div>

      <!-- Label and input for guest_id -->
      <div class="form-group">
        <label for="guest_id" class="control-label">
          Guest
        </label>

        <input type="text" id="guest_id" name="guest_id" placeholder="Guest" class="form-control" value="<%= @listingreview.guest_id %>">
      </div>

      <button class="btn btn-warning">
        Update Listingreview
      </button>
      or
      <a href="/listingreviews/<%= @listingreview.id %>">Cancel</a>
    </form>
  </div>
</div>
