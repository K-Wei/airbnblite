<div class="page-header">
  <h3>Request #<%= @request.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Booking</dt>
      <dd>
        <% if @request.booking.present? %>
          <a href="/bookings/<%= @request.booking_id %>">
            <%= @request.booking.listing_id %>
          </a>
        <% end %>
      </dd>

      <dt>Guest</dt>
      <dd>
        <% if @request.guest.present? %>
          <a href="/guests/<%= @request.guest_id %>">
            <%= @request.guest.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>Acceptance</dt>
      <dd><%= @request.acceptance %></dd>

      <dt>Guest introduction</dt>
      <dd><%= @request.guest_introduction %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/requests" class="btn btn-primary">
        Back
      </a>
      <a href="/requests/<%= @request.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_request/<%= @request.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
