<div class="page-header">
  <h1>
    Listings
    <a href="/listings/new" class="btn btn-lg btn-success">New Listing</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "listings_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

<div class="form-group">
          <%= f.label :nights_available, "Nights available" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='nights_availablegteqPicker'>
                  <%= f.text_field :nights_available_gteq, :class => "form-control", :placeholder => "Nights available greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='nights_availablelteqPicker'>
                  <%= f.text_field :nights_available_lteq, :class => "form-control", :placeholder => "Nights available less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#nights_availablegteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#nights_availablelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#nights_availablegteqPicker').on("dp.change", function (e) {
                  $('#nights_availablelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#nights_availablelteqPicker').on("dp.change", function (e) {
                  $('#nights_availablegteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :default_price, "Default price" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :default_price_gteq, :class => "form-control", :placeholder => "Default price greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :default_price_lteq, :class => "form-control", :placeholder => "Default price less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :policies_cont, "Policies contains" %>
    <%= f.text_field :policies_cont, :class => "form-control", :placeholder => "Policies contains" %>
  </div>

<div class="form-group">
    <%= f.label :neighborhood_cont, "Neighborhood contains" %>
    <%= f.text_field :neighborhood_cont, :class => "form-control", :placeholder => "Neighborhood contains" %>
  </div>

<div class="form-group">
    <%= f.label :city_cont, "City contains" %>
    <%= f.text_field :city_cont, :class => "form-control", :placeholder => "City contains" %>
  </div>

<div class="form-group">
  <%= f.label :max_occupancy, "Max occupancy" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :max_occupancy_gteq, :class => "form-control", :placeholder => "Max occupancy greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :max_occupancy_lteq, :class => "form-control", :placeholder => "Max occupancy less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :bathrooms, "Bathrooms" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :bathrooms_gteq, :class => "form-control", :placeholder => "Bathrooms greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :bathrooms_lteq, :class => "form-control", :placeholder => "Bathrooms less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :bedrooms, "Bedrooms" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :bedrooms_gteq, :class => "form-control", :placeholder => "Bedrooms greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :bedrooms_lteq, :class => "form-control", :placeholder => "Bedrooms less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
    <%= f.label :room_or_home_eq, "Room or home" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :room_or_home_eq, "1", checked: ((params[:q] && params[:q][:room_or_home_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :room_or_home_eq, "0", checked: ((params[:q] && params[:q][:room_or_home_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :room_or_home_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :bookmarks_bookmark_title_cont, "Bookmark bookmark_title contains" %>
      <%= f.text_field :bookmarks_bookmark_title_cont, :class => "form-control", :placeholder => "Bookmark bookmark_title contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/listings" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#listings_filters">
      Show Filters
    </a>
  </div>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Room or home</th>
        <th>Photos</th>
        <th>Description</th>
        <th>Bedrooms</th>
        <th>Bathrooms</th>
        <th>Max occupancy</th>
        <th>City</th>
        <th>Neighborhood</th>
        <th>Address</th>
        <th>Policies</th>
        <th>Default price</th>
        <th>Host</th>
        <th>Nights available</th>
        <th>Actions</th>
      </tr>

      <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.room_or_home %></td>
        <td><img src='<%= listing.photos %>' class='img-responsive'></td>
        <td><%= listing.description %></td>
        <td><%= listing.bedrooms %></td>
        <td><%= listing.bathrooms %></td>
        <td><%= listing.max_occupancy %></td>
        <td><%= listing.city %></td>
        <td><%= listing.neighborhood %></td>
        <td><%= listing.address %></td>
        <td><%= listing.policies %></td>
        <td><%= listing.default_price %></td>
        <td>
          <% if listing.host.present? %>
            <a href="/hosts/<%= listing.host.id %>">
              <%= listing.host.user_id %>
            </a>
          <% end %>
        </td>
        <td><%= listing.nights_available %></td>
        <td>
          <a href="/listings/<%= listing.id %>" class="btn btn-primary">Show</a>
          <a href="/listings/<%= listing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_listing/<%= listing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @listings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>